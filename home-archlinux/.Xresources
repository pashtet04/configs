! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

Xft.dpi:        104
Xft.lcdfilter:	lcddefault
Xft.antialias:  true
Xft.rgba:       rgb
Xft.autohint:	0
Xft.hinting:    true
Xft.hintstyle:  hintslight
! URxvt.font: xft:Monaco \for \Powerline:pixelsize=18
! URxvt*font: xft:Inconsolata Nerd Font Mono:size=15, xft:DejaVu Sans:size=12
URxvt*font:                 xft:Fira Code Retina:pixelsize=11:minspace=False, xft:DejaVu Sans:pixelsize=8, xft: Symbola
URxvt*boldFont:             xft:Fira Code Retina:pixelsize=11:minspace=False, xft:DejaVu Sans:pixelsize=8, xft: Symbola

! Disable printing the terminal contents when pressing PrintScreen.
URxvt.print-pipe: "cat > /dev/null"

URxvt.perl-ext-common: default,matcher,selection-to-clipboard,tabbed
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste

URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list
URxvt.matcher.rend.0: Uline Bold
! URxvt.colorUL: #4682B4

! Escape home and end keys
URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End:  \033[4~
! Xcursor --------------------------------------------------------------------
Xcursor.theme: Vanilla-DMZ-AA
Xcursor.size:  22
! Colored man pages -------------------------------------------------
! URxvt.colorIT:      #87af5f
! URxvt.colorBD:      #d7d7d7

! terminal colors ------------------------------------------------------------

! Compile xft: Attempt to find a visual with the given bit depth;
URxvt*depth: 32 

URxvt.letterSpace: 1
URxvt.geometry: 120x40

! special
*.foreground:   #bbbbbb
*.background:   #171717
*.cursorColor:  #bbbbbb

! black
*.color0:       #131313
*.color8:       #3d3a3b

! red
*.color1:       #883c43
*.color9:       #bb6767

! green
*.color2:       #899e3b
*.color10:      #d2d074

! yellow
*.color3:       #deb14f
*.color11:      #807b64

! blue
*.color4:       #6e6461
*.color12:      #909798

! magenta
*.color5:       #753747
*.color13:      #956c74

! cyan
*.color6:       #55776e
*.color14:      #71bb94

! white
*.color7:       #bbbbbb
*.color15:      #baba9e
